<div class="flex gap-x-4 sm:col-span-2 {{ field.outerclasses|default('') }}">
  <div class="flex h-6 items-center">
      <div class="group relative inline-flex w-8 shrink-0 rounded-full bg-white/5 p-px
                  outline-offset-2 outline-indigo-500 ring-1 ring-inset ring-white/10
                  transition-colors duration-200 ease-in-out has-[:checked]:bg-indigo-500
                  has-[:focus-visible]:outline has-[:focus-visible]:outline-2">
          <span class="size-4 rounded-full bg-white shadow-sm ring-1 ring-gray-900/5
                       transition-transform duration-200 ease-in-out
                       group-has-[:checked]:translate-x-3.5"></span>
          <input
              id="{{ field.id }}"
              type="checkbox"
              name="{{ field.name }}"
              class="absolute inset-0 appearance-none focus:outline-none opacity-0 cursor-pointer w-full h-full"
              {% if value %}checked{% endif %}
              {% if field.validate.required %}required{% endif %}
          />
      </div>
  </div>
  <label for="{{ field.id }}" class="text-sm/6 text-gray-400">
      {{ field.label|raw }}
  </label>
</div>
